{
  "name": "openchat",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --names \"CLIENT,SERVER\" --prefix-colors \"cyan,green\" \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "npm run test --workspace=client -- --run",
    "test:server": "npm run test --workspace=server -- --run",
    "test:coverage": "npm run test:coverage:client && npm run test:coverage:server",
    "test:coverage:client": "npm run test:coverage --workspace=client",
    "test:coverage:server": "npm run test:coverage --workspace=server",
    "test:watch": "npm run test:watch:client & npm run test:watch:server",
    "test:watch:client": "npm test -- --watch --workspace=client",
    "test:watch:server": "npm test -- --watch --workspace=server",
    "lint": "npm run lint --workspace=client && npm run lint --workspace=server",
    "lint:fix": "npm run lint:fix --workspace=client && npm run lint:fix --workspace=server",
    "db:setup": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:reset": "npm run db:reset --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
